{
	"compilerOptions": {
		"target": "esnext",
		"lib": ["dom", "es2019"],
		"outDir": "./lib",
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": false,
		"removeComments": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"watch": true,
		"incremental": false,
		"noResolve": false,

		"baseUrl": ".",
		"paths": {
      			"@assets/*": ["assets/*"],
    		}
	},

	"include": [
		"./src/**/*.*"
	],

	"files": [
		"./src/index.ts"
	]
}
